body {
    margin: 60px auto;
    width: 80%;
    flex: 1;
    justify-content: space-between;
    background-image: url(/image/bg02.jpg); 
    background-repeat: no-repeat;
    background-position: center top;
    background-size: cover; 
}
nav ul, footer ul {
    font-family:'Helvetica', 'Arial', 'Sans-Serif';
    padding: 0px;
    list-style: none;
    display: inline;
}
nav ul li, footer ul li {
	display: inline;
    margin-right: 20px;
    padding: 10px 10px;
}

nav ul li {
    font-size: 1.2em;
}

.navleft {
	display: block;
	list-style: none;
	font-size: 1.2em;
	margin-right: 20px;
	margin-left: 20px;
	padding: 10px 10px;
}
a {
    text-decoration: none;
    color: #666;
}
a:hover {
    background-color: #E8F0F5;
}
h1 {
    font-size: 2.5em;
    font-family: 'Comic Sans MS', 'cursive', 'Helvetica', 'Arial', 'Sans-Serif';
}

h2 {
    font-size: 1.8em;
    font-family: 'Comic Sans MS', 'cursive', 'Helvetica', 'Arial', 'Sans-Serif';
}

p {
    font-size: 1.2em;
    line-height: 1.4em;
    color: #333;
    font-family: 'Cursive', 'Verdana';
}

footer {
    color: DarkStateGray;
    border-top: 2px solid #d5d5d5;
    font-size: 16px;
}

ul.posts { 
    margin: 20px auto 40px; 
    font-size: 1.5em;
}

ul.posts li {
    list-style: none;
}
